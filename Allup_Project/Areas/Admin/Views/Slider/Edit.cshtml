@using Allup_Service.Dtos.SliderDtos
@model SliderUpdateDto
@{
    ViewData["Title"] = "Edit";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Slider Title</label>
                <input asp-for="Title" class="form-control" id="inputBlogTitle" placeholder="Title.." maxlength="100">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Slider Description</label>
                <textarea asp-for="Desc" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="image mb-5">
                <img src="~/Uploads/Sliders/@Model.ImageUrl" style="width:300px;height:200px" alt="" />
            </div>

            <div class="form-group">
                <label asp-for="NewImage">Slider Photo</label>
                <input asp-for="NewImage" accept="image/*" class="form-control" placeholder="Image.." maxlength="100">
                <img style="display:none;" height="100" width="300" id="imgPreview" src="" alt="" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>
            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>