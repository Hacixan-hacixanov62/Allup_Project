@using Allup_Service.Dtos.ReclamBannerDtos
@model ReclamBannerCreateDto
@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<div class="container">
    <form style="margin-top:20px" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Title</label>
            <input asp-for="RedirectUrl" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="RedirectUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageFile">Photo</label>
            <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Image.." maxlength="100">
            <img style="display:none;" height="100" width="300" id="imgPreview" src="" alt="" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>