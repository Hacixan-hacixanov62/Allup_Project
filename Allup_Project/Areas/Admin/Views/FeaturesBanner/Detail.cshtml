@using Allup_Service.Dtos.FeaturesBannerDtos
@model FeaturesBannerDetailDto
@{
    ViewData["Title"] = "Detail";
}
<br />
<br />
<div class="card m-auto w-75">
    <div class="card-body">
        <h4 class="card-title">Banner Detailed View</h4>
        <div class="d-flex">
            <div class="d-flex align-items-center text-muted font-weight-light">
                <i class="mdi mdi-clock icon-sm me-2"></i>
                @* <p><b>Cerated date:</b> @Model.CreatedDate</p> *@
            </div>
        </div>
        <div class="row">
            <img src="~/Uploads/FeaturesBanners/@Model.ImageUrl" style="width:100%;height:100%;" alt="...">
        </div>
        <div class="d-flex mt-5 align-items-top">
            <div class="mb-0 flex-grow">

                <p><b>Title:</b> @Model.Title</p>
                <p><b>Desc:</b> @Model.Desc</p>


            </div>
        </div>
        <div class="col">
            <a class="btn btn-gradient-success" asp-action="index">Cancel</a>
        </div>
    </div>
</div>
