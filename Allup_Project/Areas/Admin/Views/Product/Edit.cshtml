@using Allup_Core.Entities
@using Allup_Service.Dtos.ProductDtos
@model ProductUpdateDto


<br />
<br />
<div class="container">
    <div class="row mx-auto ">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Desc"></label>
                <input asp-for="Desc" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Desc"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Discount</label>
                <input asp-for="DiscountPercent" class="form-control" aria-describedby="emailHelp">
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">StockCount</label>
                <input asp-for="StockCount" style="width:80px;height:30px" aria-describedby="emailHelp">
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">ProductCode</label>
                <input asp-for="ProductCode" style="width:80px;height:30px" class="form-control" aria-describedby="emailHelp">
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">IsNew</label>
                <input asp-for="IsNew" class="form-Check" aria-describedby="emailHelp">
                <span asp-validation-for="IsNew" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">BestSeller</label>
                <input asp-for="IsBestSeller" class="form-Check" aria-describedby="emailHelp">
                <span asp-validation-for="IsBestSeller" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">IsFeatured</label>
                <input asp-for="IsFeatured" class="form-Check" aria-describedby="emailHelp">
                <span asp-validation-for="IsFeatured" class="text-danger"></span>
            </div>


            <img style="width: 100px; height: 100px;" class="primary-img"
                 src="@Model.MainFileUrl"
                 alt="Product Images" />
            <input asp-for="MainFileUrl" type="hidden" value="@Model.MainFileUrl " />

            <div class="form-group">
                <label asp-for="MainFile" for="exampleInputUsername1"></label>
                <input class="form-control" id="exampleInputName" asp-for="MainFile" placeholder="Enter Main File">
                <span asp-validation-for="MainFile" class="text-danger"></span>
            </div>

            @for (int i = 0; i < Model.ImagePaths?.Count; i++)
            {
                var imagePath = Model.ImagePaths[i];

                <div style="position: relative; display: inline-block; margin-right: 10px;">
                    <div style="position: relative;">
                        <img style="width: 100px; height: 100px;" class="primary-img"
                             src="@imagePath"
                             alt="Product Images" />
                        <button type="button" class="buttonRemove btn btn-danger" style="position: absolute; top: 0; right: 0; z-index: 1;">
                            x
                        </button>
                        <input asp-for="ImagePaths" type="hidden" value="@imagePath" />
                        <input asp-for="ImageIds" type="hidden" value="@Model.ImageIds[i]" />
                    </div>

                </div>
            }
            <div class="form-group">
                <label asp-for="AdditionalFiles" for="exampleInputUsername1"></label>
                <input class="form-control" id="exampleInputName" asp-for="AdditionalFiles" placeholder="Enter Additional Files">
                <span asp-validation-for="AdditionalFiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label"> Category</label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, nameof(Category.Id), nameof(Category.Name)))" class="form-control">
                    <option disabled selected>Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
