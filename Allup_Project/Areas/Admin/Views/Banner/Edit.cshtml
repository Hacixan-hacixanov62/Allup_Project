@using Allup_Service.Dtos.BannerDtos
@model BannerUpdateDto
@{
    ViewData["Title"] = "Edit";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">RedirectUrl</label>
                <input asp-for="RedirectUrl" class="form-control" aria-describedby="emailHelp">
                <span asp-validation-for="RedirectUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Activate</label>
                <input asp-for="IsActivated" style="width:30px;height:30px" aria-describedby="emailHelp">
                <span asp-validation-for="IsActivated" class="text-danger"></span>
            </div>
            <div class="image mb-5">
                <img src="~/Uploads/Banners/@Model.ImageUrl" style="width:300px;height:200px" alt="" />
            </div>

            <div class="form-group">
                <label asp-for="ImageFile">Banner Photo</label>
                <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Image.." maxlength="100">
                <img style="display:none;" height="100" width="300" id="imgPreview" src="" alt="" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>