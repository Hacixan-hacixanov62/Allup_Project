@using Allup_Service.Dtos.CategoryDtos
@model CategoryCreateDto
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Slider Title</label>
                <input asp-for="Name" class="form-control" id="inputBlogTitle" placeholder="Title.." maxlength="100">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Activate</label>
                <input asp-for="IsActivated" style="width:30px;height:30px" aria-describedby="emailHelp">
                <span asp-validation-for="IsActivated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Photo</label>
                <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Image.." maxlength="100">
                <img style="display:none;" height="100" width="300" id="imgPreview" src="" alt="" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>