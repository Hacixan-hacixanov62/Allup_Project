            const TotalPriceOutputs = document.querySelectorAll('.BasketItemTotalPrice');

            if (BasketItemPrice) {
                let priceString = BasketItemPrice.innerHTML;
                let basketCount = parseInt(BasketItemCounter ? BasketItemCounter.innerHTML : 0);
