@using Allup_Project.ViewModels.AuthVm
@model UserRegisterVM
@{
    Layout = "_Layout"; 
}

<!--====== Register Part Start ======-->

<section class="register-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Register</h4>
                    <p class="mt-10">Already have an account? <a asp-action="Login" >Log in instead!</a></p>

                    <form asp-action="Register" method="post">
                        <div class="single-form">
                            <input asp-for="FullName" placeholder="Enter FullName" required />
                            <label asp-for="FullName">FullName</label>
                        </div>
                        <span class="text-danger" asp-validation-for="FullName"></span>
                        <div class="single-form">
                            <input asp-for="UserName" placeholder="Enter UserName" required />
                            <label asp-for="UserName">UserName</label>
                        </div>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                        <div class="single-form">
                            <input asp-for="Email" placeholder="Enter Email" required />
                            <label asp-for="Email">Email</label>
                        </div>
                        <span class="text-danger" asp-validation-for="Email"></span>
                        <div class="single-form">
                            <input asp-for="Password" placeholder="Enter your Password" required />
                            <label asp-for="Password"></label>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <div class="single-form">
                            <input asp-for="ConfirmPassword" placeholder="Enter your ConfirmPassword" required />
                            <label asp-for="ConfirmPassword"></label>
                        </div>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" id="account-1">
                            <label for="account-1"></label>
                            <p>Receive Offers From Our Partners</p>
                        </div>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" id="account-2">
                            <label for="account-2"></label>
                            <p>Sign Up For Our Newsletter <br> Subscribe To Our Newsletters Now And Stay Up-To-Date With New Collections, The Latest Lookbooks And Exclusive Offers..</p>
                        </div>
                        <div class="single-form">
                            <button type="submit" class="main-btn main-btn-2">Register</button>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Register Part Ends ======-->
@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}