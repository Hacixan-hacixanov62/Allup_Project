@using Allup_Project.ViewModels.AuthVm
@model ResetPasswordVM

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">ResetPassword Page</h4>
                    <form asp-action="ResetPassword" method="post">
                       
                        <div class="single-form">
                            <input asp-for="Password" placeholder="Enter your Password" required />
                            <label asp-for="Password"></label>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <div class="single-form">
                            <input asp-for="ConfirmPassword" placeholder="Enter your ConfirmPassword" required />
                            <label asp-for="ConfirmPassword"></label>
                        </div>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />
                        <div class="single-form">
                            <button type="submit" class="main-btn main-btn-2">ResetPassword</button>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </form>              
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Login Part Ends ======-->
