@using Allup_Project.ViewModels.AuthVm
@model UserLoginVm
@{
    Layout = "_Layout";
}



<!--====== Breadcrumb Part Start ======-->

<div class="breadcrumb-area">
    <div class="container-fluid custom-container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Login</li>
            </ol>
        </nav>
    </div> <!-- container -->
</div>

<!--====== Breadcrumb Part Ends ======-->
<!--====== Login Part Start ======-->

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Login to Your Account</h4>
                    <form asp-action="Login" method="post">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["Success"];
                            </div>
                        }
                        <div class="single-form">
                            <input asp-for="UserNameOrEmail" placeholder="Enter UserNameOrEmail" required />
                            <label asp-for="UserNameOrEmail">UserNameOrEmail</label>
                        </div>
                        <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
                        <div class="single-form">
                            <input asp-for="Password" placeholder="Enter your Password" required />
                            <label asp-for="Password"></label>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" id="account">
                            <label for="account"></label>
                            <label asp-for="RememberMe">

                            </label>
                            <input asp-for="RememberMe" />
                        </div>
                        <div class="single-form">
                            <button type="submit" class="main-btn main-btn-2">Login</button>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </form>
                    <p class="mt-20"><a asp-action="ForgotPassword">Lost your password?</a></p>
                    <p class="mt-10">No account? <a asp-action="Register" >Create one here.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Login Part Ends ======-->
@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function (){
            function removeSuccess() {
                $(" .alert-success").remove();
            }
            siteTimeout(removeSuccess, 3000);
        })
    </script>
}