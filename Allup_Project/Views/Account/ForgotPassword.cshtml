@using Allup_Project.ViewModels.AuthVm
@model ForgotPasswordVm

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">ForgetPassword</h4>
                    <form asp-action="ForgotPassword" method="post">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["Success"];
                            </div>
                        }
                        <div class="single-form">
                            <input asp-for="Email" placeholder="Enter Email" required />
                            <label asp-for="Email">Email</label>
                        </div>
                        <span class="text-danger" asp-validation-for="Email"></span>                                           
                        <div class="single-form">
                            <button type="submit" class="main-btn main-btn-2">Click</button>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Login Part Ends ======-->
