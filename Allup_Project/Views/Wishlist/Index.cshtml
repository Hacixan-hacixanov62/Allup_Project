@section Scripts{
    <script>
        $(document).ready(function () {
            $(".add-to-wishlist").click(function () {
                var productId = $(this).data("id");

                $.ajax({
                    url: '/Wishlist/AddWishlist',
                    type: 'POST',
                    data: { id: productId },
                    success: function (res) {
                        if (res.success) {
                            alert("Məhsul wishliste əlavə olundu! Yeni say: " + res.count);
                            // İstəyə görə ikon dəyişdirilə bilər
                        }
                    }
                });
            });

            $(".remove-from-wishlist").click(function () {
                var productId = $(this).data("id");

                $.ajax({
                    url: '/Wishlist/DeleteWishlist',
                    type: 'POST',
                    data: { id: productId },
                    success: function (res) {
                        if (res.success) {
                            alert("WishList-dən silindi!");
                            location.reload(); // Yəni yenidən yüklə
                        }
                    }
                });
            });
        });
    </script>
}