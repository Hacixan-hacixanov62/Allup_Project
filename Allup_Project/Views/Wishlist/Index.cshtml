@section Scripts{
    <script>
            $(".remove-from-wishlist").click(function (e) {
            e.preventDefault();

            var btn = $(this);
            var productId = btn.data("id");

            $.ajax({
                url: '/Wishlist/DeleteWishlist',
                type: 'POST',
                data: { id: productId },
                success: function (res) {
                    if (res.success) {

                        btn.closest("tr").remove(); 
                    }
                }
            });
        });

    </script>

    <script>

        function updateRowTotal(productId, newCount) {
            const unitPriceSpan = document.querySelector(`#unit-price-${productId} .price`);
            const totalPriceSpan = document.querySelector(`#total-price-${productId} .total-amount`);

            if (!unitPriceSpan || !totalPriceSpan) return;

            let unitPrice = parseFloat(unitPriceSpan.innerText.replace('€', '').trim());
            let newTotal = (unitPrice * newCount).toFixed(2);

            totalPriceSpan.innerText = `€${newTotal}`;
        }


        function increaseCount(productId) {
            fetch(`/Wishlist/IncreaseToCart?id=${productId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            })
            .then(res => res.json())
            .then(data => {
                if(data.success){
                    const countSpan = document.getElementById(`value-${productId}`);
                    if(countSpan){
                        let currentCount = parseInt(countSpan.innerText);
                        countSpan.innerText = currentCount + 1;
                    }

                    updateRowTotal(productId, parseInt(countSpan.innerText));

                    document.getElementById("basketCount").innerText = data.count;
                    document.getElementById("smallcount").innerText = data.count;

                    document.getElementById("subtotal-amount").innerText = `€${data.total.toFixed(2)}`;
                    document.getElementById("total-amount").innerText = `€${data.total.toFixed(2)}`;
                    document.getElementById("totals").innerText = `€${data.total.toFixed(2)}`;
                }
            })
            .catch(error => {
                console.error('Artırma xətası:', error);
            });
        }

        function decreaseCount(productId) {
            const countSpan = document.getElementById(`value-${productId}`);
            if (!countSpan) return;

            let currentCount = parseInt(countSpan.innerText);
            if (currentCount <= 1) return;

            fetch(`/Wishlist/DecreaseToCart?id=${productId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            })
            .then(res => res.json())
            .then(data => {
                if(data.success){
                    currentCount--;
                    countSpan.innerText = currentCount;

                    updateRowTotal(productId, currentCount);

                    document.getElementById("basketCount").innerText = data.count;
                    document.getElementById("smallcount").innerText = data.count;

                    document.getElementById("subtotal-amount").innerText = `€${data.total.toFixed(2)}`;
                    document.getElementById("total-amount").innerText = `€${data.total.toFixed(2)}`;
                    document.getElementById("totals").innerText = `€${data.total.toFixed(2)}`;
                }
            })
            .catch(err => console.error("Azaltma xətası:", err));
        }



        function getAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]').value;
        }


    </script>


    }
