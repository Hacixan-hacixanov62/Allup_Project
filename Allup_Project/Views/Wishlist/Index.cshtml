        <div class="row">
            <div class="col-xl-12">
                <div class="wishlist mt-30">
                    <div class="shopping-cart-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="image">Image</th>
                                    <th class="product">Product</th>
                                    <th class="price">Price</th>
                                    <th class="quantity">Quantity</th>
                                    <th class="total">Total</th>
                                    <th class="delete">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="product-image">
                                                <img src="@item.Product.ProductImages.FirstOrDefault(m=>m.IsCover)?.ImageUrl" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-title">
                                                <h4 class="title"><a asp-controller="Shop" asp-action="Detail">@item.Product.Name</a></h4>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-price" id="unit-price-@item.ProductId">
                                                <span class="price">€@((item.Product.CostPrice - (item.Product.SalePrice * item.Product.DiscountPercent / 100)).ToString("0.00"))</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-quantity">
                                                <div class="quantity mt-15 d-flex">
                                                    <button type="button" class="sub" onclick="decreaseCount(@item.ProductId)">
                                                        <i class="fal fa-minus"></i>
                                                    </button>
                                                    
                                                    <span class="count" id="value-@item.ProductId">@item.Count</span>

                                                    <button type="button" class="add" onclick="increaseCount(@item.ProductId)">
                                                        <i class="fal fa-plus"></i>                                
                                                    </button>

                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-total" id="total-price-@item.ProductId">
                                                <span class="total-amount">€@((item.Count * (item.Product.CostPrice - (item.Product.SalePrice * item.Product.DiscountPercent / 100))).ToString("0.00"))</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-delete">
                                                <a asp-controller="WishList" asp-action="DeleteWishlist" data-id="@item.ProductId" class="remove-from-wishlist"><i class="fal fa-trash-alt"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</section>

