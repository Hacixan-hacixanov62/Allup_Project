@using Allup_Service.Dtos.WisListDtos
@model WislistDetailDto 
@{
    Layout = "_Layout";
}

<section class="wishlist-page pt-10">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-xl-12">
                <div class="wishlist mt-30">
                    <div class="shopping-cart-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="image">Image</th>
                                    <th class="product">Product</th>
                                    <th class="price">Price</th>
                                    <th class="quantity">Quantity</th>
                                    <th class="total">Total</th>
                                    <th class="delete">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.WishlistItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="product-image">
                                                <img src="@item.Product.ProductImages.FirstOrDefault(m=>m.IsCover)?.ImageUrl" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-title">
                                                <h4 class="title"><a href="single-product.html">@item.Name</a></h4>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-price">
                                                <span class="price">€@item.Price.ToString("0.00")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-quantity">
                                                <div class="quantity mt-15 d-flex">
                                                    <button type="button" class="sub"><i class="fal fa-minus"></i></button>
                                                    <input type="text" value="1" />
                                                    <button type="button" class="add"><i class="fal fa-plus"></i></button>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-total">
                                                <span class="total-amount">€@item.Price.ToString("0.00")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-delete">
                                                <a asp-controller="WishList" asp-action="DeleteWishlist" data-id="@item.ProductId" class="remove-from-wishlist"><i class="fal fa-trash-alt"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    <script>
            $(".remove-from-wishlist").click(function (e) {
            e.preventDefault();

            var btn = $(this);
            var productId = btn.data("id");

            $.ajax({
                url: '/Wishlist/DeleteWishlist',
                type: 'POST',
                data: { id: productId },
                success: function (res) {
                    if (res.success) {

                        btn.closest("tr").remove();
                    }
                }
            });
        });

    </script>


}
}