@using Allup_Core.Entities
@model Order
@{
	int orderCount = 1;
}
<style>
    .order-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: #f1f5f9; /* Açıq arxa fon */
    }

    .order-card {
        background: linear-gradient(135deg, #ffffff, #e0e7ff);
        padding: 40px;
        width: 600px;
        max-width: 90%;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .order-table th {
        background-color: #4f46e5;
        color: white;
        text-transform: uppercase;
    }

    .order-table tbody tr:hover {
        background-color: #f0f4ff;
    }

    .order-table td, .order-table th {
        vertical-align: middle;
    }

    .order-title {
        text-align: center;
        color: #3b3b98;
        margin-bottom: 25px;
    }
</style>

<div class="order-wrapper">
    <div class="order-card">
        <h3 class="order-title">🧾 Order Items</h3>

        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center order-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderItem in Model.OrderItems)
                    {
                        <tr>
                            <td>@orderCount</td>
                            <td>@orderItem.Order.Name</td>
                            <td>@orderItem.Count</td>
                            <td>@orderItem.TotalPrice.ToString("0.00") ₼</td>
                        </tr>
                        orderCount++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
